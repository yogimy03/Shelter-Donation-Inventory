# Environment variables for Shelter Donation Inventory System
# Copy this file to .env and fill in your actual values

# MongoDB connection string
# For local MongoDB: mongodb://localhost:27017/shelter-donations
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/shelter-donations
MONGODB_URI=mongodb://localhost:27017/shelter-donations

# Server port (optional, defaults to 3000)
PORT=3000

# Node environment
NODE_ENV=development
